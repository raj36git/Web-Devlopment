//Operators and Expressions

//Arithmetic Operatoes
let a = 10;
let b = 4;
console.log(++a);
console.log(a++);
console.log(--a);
console.log(a--);
console.log(a);
console.log(a--);


//Assignment Operators
a = b
a += b; //a = a+b
a -= b; //a = a-b
a *= b; //a = a*b
a /= b; //a = a/b
a **= b; //a = a**b


//Comparision Operator
a>b  //greater than
a<b   //smaller than  
==    //equal to:- check whether value is equal oe not
!=    //not equal to:- 
===   //triple equal to:- check whether value is equal oe not as well as type equal or not
!==   //check not equal in both value and type
  


// //Logical Operator
  && :- AND
 ||  :- OR
 !  :-NOT 
let x = 2
let y = 3;
console.log(x>1 && x==2);
console.log(x<1 || x!=2); 

//:- this is called comment


